{
  "manifest_version": 3,
  "name": "Indeed Auto Apply",
  "version": "0.2.28",
  "description": "Auto-apply to Indeed jobs with AI-tailored CV and smart form filling",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "notifications",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.indeed.com/*",
    "*://*.linkedin.com/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.indeed.com/*"
      ],
      "exclude_matches": [
        "*://smartapply.indeed.com/*"
      ],
      "js": [
        "content/indeed.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://smartapply.indeed.com/*"
      ],
      "js": [
        "content/mainworld.js"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": [
        "*://smartapply.indeed.com/*"
      ],
      "js": [
        "content/smartapply.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
