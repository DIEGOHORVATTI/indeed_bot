{
  "name": "indeed-auto-apply",
  "version": "0.3.7",
  "description": "Chrome extension for auto-applying to Indeed jobs",
  "private": true,
  "packageManager": "bun@1.3.4",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "clean": "rm -rf dist",
    "bump": "node -e \"const p=require('./package.json'),m=require('./manifest.json'),fs=require('fs');const v=p.version.split('.'),patch=+v[2]+1;v[2]=patch;const nv=v.join('.');p.version=nv;m.version=nv;fs.writeFileSync('package.json',JSON.stringify(p,null,2)+'\\n');fs.writeFileSync('manifest.json',JSON.stringify(m,null,2)+'\\n');console.log('Bumped to '+nv)\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json}'",
    "release": "npm run bump && npm run build && git add -A && git commit -m \"chore: bump extension to v$(node -p \"require('./package.json').version\")\" && git push"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@types/chrome": "^0.0.287",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1",
    "webpack": "^5.97.0",
    "webpack-cli": "^6.0.0"
  }
}
